extends layout
block style
    link(rel='stylesheet', href='/css/index.css')

block content

  div#modal-dark
  div#modal-image
    img(id="modal" src="")

  aside
    img(id="logo" src="images/chris.png")
    p
      |Procedente igitur mox tempore cum adventicium nihil inveniretur,
      |relicta ora maritima in Lycaoniam adnexam Isauriae se contulerunt
      |ibique densis intersaepientes itinera praetenturis provincialium et viatorum opibus pascebantur.


    ul
      li#galerie Galerie
      li#billets Billets
      li#contacts Contacts

      div#fb
      div#pinterest
      div#blogger


  section#masonry
    each image in images
        div.image-box
            img(src='images/' + image.pathId +'.jpg' onclick="modalOn(this)")


block script
  script(src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js")
  script(src="javascripts/index.js")
